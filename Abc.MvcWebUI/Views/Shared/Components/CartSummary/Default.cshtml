@model Abc.MvcWebUI.Models.CartSummaryViewModel

<div class="dropdown-menu" aria-labelledby="navbarDropdown">

    @foreach (var item in Model.Cart.CartLines)
    {
        <a>@item.Product.ProductName <span class="badge">@item.Quantity</span></a><br/>

    }
    <div class="dropdown-divider"></div>
    <div role="separator"></div>
    <a class="dropdown-item"><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true">@Model.Cart.Total</span></a>
    <a class="dropdown-item" asp-controller="Cart" asp-action="List">Go to cart details</a>
</div>